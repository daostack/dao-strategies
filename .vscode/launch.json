{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "hardhat test",
      "skipFiles": ["<node_internals>/**"],
      "runtimeExecutable": "${workspaceFolder}/packages/contracts/node_modules/.bin/hardhat",
      "args": ["test", "--network", "localhost"],
      "cwd": "${workspaceFolder}/packages/contracts"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "oracle",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}
