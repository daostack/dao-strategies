datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Campaign {
  uri             String    @id
  title           String
  description     String
  creator         User      @relation(fields: [creatorId], references: [address])
  creatorId       String    
  nonce           Int
  guardian        String
  oracle          String
  execDate        BigInt
  cancelDate      BigInt
  stratID         String
  stratParamsStr  String    // For now, Params are stringified as they can have any structure
  rewards         Reward[] 
  lastSimDate     BigInt
  registered      Boolean   // Registered campaigns are those live (with a smart contract). 
  address         String    // Smart contract address
}

enum CampaignState {
  PendingExecution
  PendingIdentityValidation
  MerkleRootSet
}

model User {
  address         String    @id
  github          String
  created         Campaign[]
} 

model Reward {  
  id              String    @id   // id is hash(uri+account)
  account         String
  amount          BigInt        
  campaign        Campaign  @relation(fields: [campaignId], references: [uri])
  campaignId      String
}
